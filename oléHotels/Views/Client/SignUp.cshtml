@model Client
@{
    ViewData["Title"] = "Customer Login";
}
<div class="row">
    <div class="col">
        <img src="/images/login-background.png" class="img-fluid"/>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="modelLogin" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
          <div class="row">
              <div class="col">
                  <div class="text-center">
                      <img src="/images/logo-home.png" width="200" height="200" class="border-0 img-thumbnail" alt="..." />
                  </div>
                  
              </div>
          </div>
          <div class="row">
              <div class="col">
                  <div class="text-center text-uppercase font-weight-bold">Sign Up</div>
              </div>
          </div>
            <form asp-controller="Client" asp-action="SignUp" method="post">
                <div class="form-group">
                    <input asp-for="Username" placeholder="username" class="form-control border-bottom" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="password" class="form-control border-bottom" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FirstName" placeholder="First Name" class="form-control border-bottom" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" placeholder="Last Name" class="form-control border-bottom" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" placeholder="Email" class="form-control border-bottom" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Phone" placeholder="Phone" class="form-control border-bottom" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                
                <div class="form-group text-center">
                        <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-pill site-bg-color">Sign Up</button>
                </div>
            </form>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
    <script>
    $(function(){
        $('#modalLogin').modal('show')
 
        $('#modalLogin').on('hidden.bs.modal', function (e) {
            window.location = "/Home/Index";
        }); 
    });  
    </script>  
}