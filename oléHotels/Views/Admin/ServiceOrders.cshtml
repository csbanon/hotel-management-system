@model IEnumerable<Service>
@{
    ViewData["Title"] = "Service Orders";
}
<!-- Header Image -->
<div class="row">
    <div class="col">
        <div class="jumbotron jumbotron-fluid"
            style="background-image: url('/images/rooms-header-image.png'); background-size: cover; height: 200px;">
            <div class="container">
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-10">
           <table class="table table-hover table-striped">
               <thead class="thead-dark">
                   <th>Date Created</th>
                   <th>Employee</th>
                   <th>Type</th>
                   <th>Room</th>
                   <th>Comments</th>
                   <th>&nbsp;</th>
               </thead>
               <tbody>
                   @foreach(var service in Model)
                   {
                    <tr>
                        <td>@service.DateCreate.ToShortDateString()</td>
                        <td>@service.Employee.FullName</td>
                        <td>@service.ServiceType</td>
                        <td>@service.Room.RoomNumber</td>
                        <td><textarea rows="3">@service.Comments</textarea></td>
                        <td><a class="btn btn-primary" asp-controller="Admin" asp-action="ServiceOrder" asp-route-id="@service.ServiceId">Edit</a></td>
                    </tr>    
                   } 
               </tbody>
           </table>
    </div>
</div>
    <div class="row justify-content-center">
        <div class="col-12">
            <p>&nbsp;</p>
            <p>&nbsp;</p>
        </div>
    </div>
