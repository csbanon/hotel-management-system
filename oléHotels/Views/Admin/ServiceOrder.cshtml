@model Service
@{
    ViewData["Title"] = "Service Order";
}
<!-- Header Image -->
<div class="row">
    <div class="col">
        <div class="jumbotron jumbotron-fluid"
            style="background-image: url('/images/rooms-header-image.png'); background-size: cover; height: 200px;">
            <div class="container">
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-10">
        <form asp-controller="Admin" asp-action="ServiceOrder" method="post">
            <input type="hidden" asp-for="ServiceId" />
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input addOns" asp-for="IsCompleted">
                            <label class="custom-control-label" asp-for="IsCompleted"></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Comments" class="form-label"></label>
                        <textarea asp-for="Comments" class="form-control"></textarea> 
                        <span asp-validation-for="Comments" class="text-danger"></span>      
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
    <div class="row justify-content-center">
        <div class="col-12">
            <p>&nbsp;</p>
            <p>&nbsp;</p>
        </div>
    </div>